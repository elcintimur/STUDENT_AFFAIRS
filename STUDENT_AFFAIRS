print("************STUDENT AFFAIRS************")
myusername="ElÃ§in"
counter=3

while True:
  if (counter>0):
    username=input("Please Enter Your Name: ")
    if (username==myusername):
      print("Welcome!\n")
      break
    elif (username!=myusername):
      print("")
    counter-=1
  else:
    print("Please Try Again Later!\n")
    break

